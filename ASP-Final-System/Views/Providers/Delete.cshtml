@model ASP_Final_System.Models.Providers

@{
    ViewBag.Title = "Delete";
}

<h2>Eliminar Proveedor</h2>
<hr />
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                Desea continuar? Esta acción es permanente.
            </div>
            <div class="card-body">
                <div class="row">

                    <div class="col-md-6">
                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.LabelFor(model => model.RNC, "RNC del Proveedor:", htmlAttributes: new { @class = "control-label" })
                                <input class="form-control" type="text" placeholder="@Html.DisplayFor(model => model.RNC)" readonly>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.LabelFor(model => model.Name, "Nombre del Proveedor:", htmlAttributes: new { @class = "control-label" })
                                <input class="form-control" type="text" placeholder="@Html.DisplayFor(model => model.Name)" readonly>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.LabelFor(model => model.Phone, "Número de Teléfono:", htmlAttributes: new { @class = "control-label" })
                                <input class="form-control" type="text" placeholder="@Html.DisplayFor(model => model.Phone)" readonly>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.LabelFor(model => model.Email, "Email del Proveedor:", htmlAttributes: new { @class = "control-label" })
                                <input class="form-control" type="text" placeholder="@Html.DisplayFor(model => model.Email)" readonly>
                            </div>
                        </div>
                    </div>

                </div>
                <br />
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-actions">
                                <a href="\Providers/Index" class="btn btn-outline-secondary">Regresar</a> |
                                <button type="submit" value="Delete" class="btn btn-outline-danger">Eliminar</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>